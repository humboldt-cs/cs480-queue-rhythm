<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/ivQAlbum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="59dp"
        android:contentDescription="albumCover"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvQSongTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="54dp"
        android:layout_toEndOf="@+id/ivQAlbum"
        android:text="Song Title"
        android:textSize="20sp"
        tools:text="Song Title" />

    <TextView
        android:id="@+id/tvArtist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvQSongTitle"
        android:layout_marginStart="18dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@+id/ivQAlbum"
        android:text="Artist Name"
        android:textSize="14sp"
        tools:text="Artist Name" />

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="28dp"
        android:text="Welcome User"
        android:textSize="20sp"
        tools:text="Welcome User" />

    <SeekBar
        android:id="@+id/sbSeek"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvQAlbumName"
        android:layout_marginStart="13dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/ivQAlbum"
        android:max="10"
        android:progress="3" />

    <TextView
        android:id="@+id/tvQAlbumName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvArtist"
        android:layout_marginStart="18dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/ivQAlbum"
        android:text="Album Name"
        tools:text="Album Name" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvQueue"
        android:layout_width="wrap_content"
        android:layout_height="175dp"
        android:layout_below="@+id/sbSeek"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="15dp">

    </androidx.recyclerview.widget.RecyclerView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvUsers"
        android:layout_width="wrap_content"
        android:layout_height="175dp"
        android:layout_below="@+id/rvQueue"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="12dp" />

</RelativeLayout>